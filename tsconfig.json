{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "exclude": ["dist"]
}
